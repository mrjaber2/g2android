<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:padding="5dip">

	
	
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content">

			<!-- select 1st photo -->
			<Button android:id="@+id/first_photo" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginTop="46dip"
				android:layout_marginLeft="5dip" android:paddingTop="2dip"
				android:paddingBottom="2dip" android:paddingLeft="20dip"
				android:text="@string/first_photo"
				android:paddingRight="20dip" style="?android:attr/textAppearanceLargeInverse" />

			<!-- Photo number -->
			<com.android.internal.widget.NumberPicker
				android:id="@+id/photo_number" android:layout_width="70dip"
				android:layout_height="wrap_content" android:layout_marginLeft="5dip"
				android:focusable="true" android:focusableInTouchMode="true" />

			<!-- select last photo -->
			<Button android:id="@+id/last_photo" android:layout_width="wrap_content"
				
				android:text="@string/last_photo"
				android:layout_height="wrap_content" android:layout_marginTop="46dip"
				android:layout_marginLeft="5dip" android:paddingTop="2dip"
				android:paddingBottom="2dip" android:paddingLeft="20dip"
				android:paddingRight="20dip" style="?android:attr/textAppearanceLargeInverse" />

		</LinearLayout>
		<Button android:id="@+id/ok" android:layout_width="wrap_content"
			android:layout_height="wrap_content"  />
		<Button android:id="@+id/cancel" android:layout_width="wrap_content"
			android:layout_height="wrap_content"  />

</FrameLayout>